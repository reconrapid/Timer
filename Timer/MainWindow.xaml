<Window x:Name="Window" x:Class="Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer"
        mc:Ignorable="d"
        Title="Timer" Height="150" Width="440" FontWeight="Normal"
        MinHeight="200" MinWidth="440">

    <Grid Margin="10,10,10,10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Button Grid.Row="1" Grid.ColumnSpan="3" x:Name="Start" FontSize="18" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0,0,0,0" Visibility="Visible" BorderBrush="{x:Null}" Background="{x:Null}" Click="Start_Click" VerticalContentAlignment="Center"/>
        <Button Grid.Row="1" Grid.ColumnSpan="3" x:Name="Stop" FontSize="18" Content="Stop" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0,0,0,0" Visibility="Hidden" BorderBrush="{x:Null}" Background="{x:Null}" Click="Stop_Click"/>

        <TextBox Grid.Row="0" Grid.Column="0" x:Name="Hours" Text="Hours" TextWrapping="NoWrap" FontSize="24" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLines="1" MaxLength="2" TextChanged="confineToLimit" PreviewTextInput="ValidateTextBox" CommandManager.PreviewExecuted="textBox_PreviewExecuted" GotFocus="textBox_GotFocus"/>

        <TextBox Grid.Row="0" Grid.Column="1" x:Name="Minutes" Text="Minutes" TextWrapping="NoWrap" FontSize="24" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLines="1" MaxLength="2" TextChanged="confineToLimit" PreviewTextInput="ValidateTextBox" CommandManager.PreviewExecuted="textBox_PreviewExecuted" GotFocus="textBox_GotFocus"/>

        <TextBox Grid.Row="0" Grid.Column="2" x:Name="Seconds" Text="Seconds" TextWrapping="NoWrap" FontSize="24" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLines="1" MaxLength="2" TextChanged="confineToLimit" PreviewTextInput="ValidateTextBox" CommandManager.PreviewExecuted="textBox_PreviewExecuted" GotFocus="textBox_GotFocus"/>
        
    </Grid>

</Window>
